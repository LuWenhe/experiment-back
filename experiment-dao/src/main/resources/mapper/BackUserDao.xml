<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.nuist.dao.BackUserDao">
    <sql id="base_column_list">
        user_id, username, password, realName, phone, email, created_time
    </sql>

    <select id="getAllTeachers" resultType="User">
        SELECT <include refid="base_column_list"/> FROM users WHERE role = 1
    </select>
</mapper>